# Agent Swarm Protocol - Development Dockerfile
# Includes hot reload and development dependencies

FROM python:3.12-slim

LABEL org.opencontainers.image.title="Agent Swarm Protocol Handler (Dev)"
LABEL org.opencontainers.image.description="Development image with hot reload"

RUN groupadd --gid 1000 swarm \
    && useradd --uid 1000 --gid swarm --shell /bin/bash --create-home swarm

WORKDIR /app

COPY pyproject.toml .

RUN pip install --no-cache-dir -e ".[dev]" \
    && pip install --no-cache-dir watchfiles

COPY src/ src/

RUN mkdir -p /app/data /app/keys && chown -R swarm:swarm /app

USER swarm

ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV LOG_LEVEL=DEBUG

EXPOSE 8080

HEALTHCHECK --interval=10s --timeout=5s --start-period=3s --retries=3 \
    CMD python -c "import httpx; httpx.get('http://localhost:8080/swarm/health', timeout=5).raise_for_status()"

CMD ["python", "-m", "uvicorn", "src.server.app:create_app", "--factory", \
     "--host", "0.0.0.0", "--port", "8080", "--reload", "--reload-dir", "src"]
